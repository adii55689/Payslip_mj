<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#2b6bb3">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/tataproject" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="195dp"
        android:layout_height="39dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:background="@drawable/form_bg"
        android:layout_marginTop="20dp"
        android:hint="Enter Your Name"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />


    <EditText
        android:id="@+id/et_gross"
        android:inputType="phone"
        android:layout_width="195dp"
        android:layout_height="39dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:background="@drawable/form_bg"
        android:layout_marginTop="20dp"
        android:hint="Gross Pay"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />


    <EditText
        android:id="@+id/et_earnings"
        android:inputType="numberDecimal"
        android:layout_width="195dp"
        android:layout_height="39dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:background="@drawable/form_bg"
        android:layout_marginTop="20dp"
        android:hint="Other Earnings"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/et_Deductions"
        android:inputType="text"
        android:layout_width="195dp"
        android:layout_height="39dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:background="@drawable/form_bg"
        android:layout_marginTop="20dp"
        android:hint="Other Deductions"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/et_paid"
        android:inputType="numberDecimal"
        android:layout_width="195dp"
        android:layout_height="39dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:background="@drawable/form_bg"
        android:layout_marginTop="20dp"
        android:hint="Paid Amount"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/et_Balance"
        android:layout_width="195dp"
        android:inputType="numberDecimal"
        android:layout_height="39dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:background="@drawable/form_bg"
        android:layout_marginTop="20dp"
        android:hint="Opening Balance"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/et_join_date"
        android:layout_width="195dp"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/form_bg"
        android:hint="Date of Pay"
        android:inputType="date"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <Button
        android:layout_width="195dp"
        android:layout_height="39dp"
        android:id="@+id/add_employee"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:text="Pay Now "/>

</LinearLayout>